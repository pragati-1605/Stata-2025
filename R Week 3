p1<-p1+geom_point(size=10,alpha=0.1)
p1<-p1+geom_text(aes(label=gender))                                       # label as the name suggests labels the pointwrites inside the point
p1<-p1+geom_text(aes(label=gender),position="jitter")              #both jitter and nudge
(more steps are required) is used to put albel out of the coordinates   
  
 #using jitter so label is outside the point randomly  
p1<-p1+geom_text(aes(label=gender),position="nudge") 


p1<-ggplot(data=data1)
p1<-p1+aes(x=age,y=income,color=age)
p1<-p1+geom_point(size=6,pch=82)                                          # pch is used to change the shape of coordinates

